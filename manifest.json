{

	"name": "IGN++",
	"version": "2.2.0.31",
	/*
	major.minor.maint.build
	Correspondence of build with alphanumeric FF version:
	3x = ax
	4x = bx
	5x = prex
	6x = rcx
	9x = final release
	*/
	"description": "Adds many helpful features to boards.ign.com.  Quick post, ignore users, autorefresh, WYSIWYG editor, etc.",
	"minimum_chrome_version": "6.0.472.59",

	"permissions": [
		"tabs",
		"http://boards.ign.com/*",
		"http://forums.ign.com/*",
		"http://betaboards.ign.com/*"
	],
	
	"options_page": "content/options/options.xul",
	"background_page": "content/background.html",
	
	"content_scripts": [
		{
			"matches": [
				"http://boards.ign.com/*",
				"http://forums.ign.com/*",
				"http://betaboards.ign.com/*"
			],
			"css": ["skin/default/main.css"],
			"js": [
				"content/gchromewrap.js",
				"content/gchromeinitialize.js"
			]
		}
	]

}	